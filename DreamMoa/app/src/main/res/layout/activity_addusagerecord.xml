<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorAccent"
            android:fitsSystemWindows="true">


            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <ImageButton
                    android:id="@+id/backbtn"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:background="#00ff0000"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/backbtn" />

                <ImageView
                    android:id="@+id/main_title"
                    android:layout_width="132dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/use_titlte" />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/uselise_back_n_copy"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="51.3dp"
                        android:layout_height="13.8dp"
                        android:layout_marginTop="36.3dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/use_text_1"
                        android:layout_marginRight="19.3dp"
                        android:text="사용 날짜"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/date1"
                        android:layout_width="80dp"
                        android:background="#ffffff"
                        android:layout_marginTop="30.3dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"

                        android:layout_marginTop="30.3dp"
                        android:text="년"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="17dp" />

                    <EditText
                        android:id="@+id/date2"
                        android:layout_width="50dp"
                        android:background="#ffffff"
                        android:layout_marginTop="30.3dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"

                        android:layout_marginTop="30.3dp"
                        android:text="월"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="8dp"
                        android:textSize="17dp" />

                    <EditText
                        android:id="@+id/date3"
                        android:layout_width="50dp"
                        android:background="#ffffff"
                        android:layout_marginTop="30.3dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"

                        android:layout_marginTop="30.3dp"
                        android:layout_marginRight="8dp"
                        android:text="일"
                        android:layout_marginBottom="2dp"
                        android:textSize="17dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="51dp"
                        android:layout_height="13.8dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="19.3dp"
                        android:layout_marginTop="35.3dp"
                        android:src="@drawable/use_text_2"
                        android:text="사용 장소"
                        android:textSize="20dp" />


                    <EditText
                        android:id="@+id/useStoreTxt"
                        android:layout_width="223dp"
                        android:layout_height="26dp"
                        android:background="#fff"
                        android:layout_marginTop="30.3dp"
                        android:layout_marginRight="26dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="51dp"
                        android:layout_height="13.8dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="19.3dp"
                        android:layout_marginTop="30.3dp"
                        android:src="@drawable/use_text_3"
                        android:text="사용 금액"
                        android:textSize="20dp" />


                    <EditText
                        android:id="@+id/usePriceTxt"
                        android:layout_width="0dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="25.3dp"
                        android:background="#fff"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="27dp"
                        android:layout_marginTop="20.3dp"
                        android:text="원"
                        android:textSize="17dp" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:text="저장"
            android:textSize="18dp" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
